<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicAdmin.VideoPermission.VideoPackagessActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tools"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Add Video Packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    </androidx.appcompat.widget.Toolbar>
<ScrollView

    android:fillViewport="true"
    android:id="@+id/linearLayoutscroll"
    app:layout_constraintTop_toBottomOf="@+id/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:background="@drawable/backgraund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="Title"
                android:id="@+id/vidpackagetit"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@drawable/backgraund"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:hint="Description"
                android:id="@+id/viddescrip"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>

        </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:background="@drawable/backgraund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <EditText

                android:hint="MRP(Actual Price)"
                android:background="@null"
                android:layout_marginLeft="8dp"
                android:inputType="number"
                android:id="@+id/mrpprice"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>
                </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@drawable/backgraund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <EditText
                android:background="@null"
                android:layout_marginLeft="8dp"
                android:hint="Price(Discounted)"
                android:inputType="number"
                android:id="@+id/discountpri"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@drawable/backgraund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@null"
                android:layout_marginLeft="8dp"
                android:text="Video Package Time"
                android:editable="false"
                android:enabled="false"
                android:inputType="time"
                android:id="@+id/vidtime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgraund"
            android:layout_weight="0.50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="5dp"
                android:hint="Create Date"
                android:background="@null"
                android:editable="false"
                android:focusable="false"
                android:inputType="date"
                android:id="@+id/credate"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>

        </LinearLayout>

            <LinearLayout
                android:layout_weight="0.50"
             android:layout_marginTop="8dp"
            android:background="@drawable/backgraund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="Expire Date"
                android:focusable="false"
                android:editable="false"
                android:inputType="date"
                android:id="@+id/expiredate"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:padding="0dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:padding="5dp"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/fab_add"
                android:layout_gravity="right"
                android:text="Select Demo Pack"
                android:textColor="@color/white"

                android:id="@+id/seldemopack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutscroll">

            </Button>
            </LinearLayout>
        <Button

            android:padding="10dp"
            android:drawableLeft="@drawable/fab_add"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="Add Videos"
            android:textColor="@color/white1"
            android:background="@drawable/button"
            android:id="@+id/seleallpacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutscroll">

        </Button>
        </LinearLayout>
        <TextView
            android:textColor="@color/red"
            android:text="Video Selected:"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>
        <TextView

            android:background="@drawable/background_layout_white"
            android:layout_marginTop="10dp"
            android:text="None Selected"
            android:padding="10dp"
            android:id="@+id/allselecctedvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>


        <Button

            android:layout_marginTop="10dp"
            android:id="@+id/makepackbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Make A Packages"
            android:textColor="@color/white1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </Button>
    </LinearLayout>

</ScrollView>

</LinearLayout>