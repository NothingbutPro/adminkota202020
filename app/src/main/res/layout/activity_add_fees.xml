<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicAdmin.FeesStructure.AddFeesActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/red"
        android:id="@+id/toolsfee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add  Fee"
            android:textSize="20dp"
            android:layout_margin="5sp"
            android:paddingLeft="15dp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_below="@+id/capturestartbtn"
        android:orientation="vertical"
        android:id="@+id/materialli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/backgraund"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40sp">

            <Spinner

                android:id="@+id/class_spiner_vid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=" Class"
                android:inputType="number"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/backgraund"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40sp">

            <Spinner
                android:id="@+id/coursespin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=" Class"
                android:inputType="number"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/backgraund"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
        <EditText

            android:background="@null"
            android:id="@+id/enterfees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:inputType="number"
            android:hint="Enter fees amount"
            android:paddingLeft="8dp"
            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/button"
                android:id="@+id/addfeesave"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Add Fees"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>