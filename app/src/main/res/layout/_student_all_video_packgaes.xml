<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.appcompat.widget.Toolbar
    android:background="@color/red"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</androidx.appcompat.widget.Toolbar>


<LinearLayout
    android:id="@+id/demo_li"
    android:background="@drawable/backgraund"
    android:padding="10dp"
    android:weightSum="1"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_weight="0.0"
        android:src="@drawable/asr_logo"
        android:layout_width="80dp"
        android:layout_height="50dp">

    </ImageView>
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="0.50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dem_title"
        android:text="Demo Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/dem_des"
            android:text="Demo VIdeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/vid_duration"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>
    <View
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_vid_packeges_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>