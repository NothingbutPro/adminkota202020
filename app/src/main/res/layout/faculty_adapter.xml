<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="4dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:id="@+id/imgli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/manu_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ic_save_black_24dp"
                    app:civ_border_color="#fff" />

            </LinearLayout>


            <LinearLayout

                android:id="@+id/midli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintStart_toEndOf="@+id/imgli"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/factnames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avesh Khan"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/factnumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Civil Engineer at Self employed"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/fact_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:text="Indore Area, India"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/assignjobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@+id/midli"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.20"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/aidimg"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/ic_save_black_24dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assign jobs"
                        android:textAlignment="center"
                        android:textStyle="bold|normal">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="1">


            <TextView

                android:layout_weight="0.50"
                android:textColor="@color/white1"
                android:background="@color/red"
                android:text="Delete "
                android:id="@+id/deltecher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

            <com.github.florent37.shapeofview.shapes.CutCornerView
                android:layout_weight="0.50"
                android:id="@+id/editteachbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp"
                app:shape_cutCorner_bottomRightSize="20dp">
                <LinearLayout

                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="0.50"
                    android:textColor="@color/white1"
                    android:background="@color/red"
                    android:text="Edit"
                    android:id="@+id/editteacher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>
                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.CutCornerView>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/teacehrdli"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:text="Teacher's Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/edtteachename"
                    android:padding="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </EditText>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Teacher's Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>


                <EditText
                    android:id="@+id/edtemailtxt"
                    android:padding="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </EditText>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:text="Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:maxEms="10"
                    android:maxLength="10"
                    android:id="@+id/edtmobileed"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </EditText>
            </LinearLayout>
            <com.github.florent37.shapeofview.shapes.DottedEdgesCutCornerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shape_dot_radius="3dp"
                app:shape_dot_spacing="2dp"
                app:shape_edge_position="right|left"
                app:shape_dottedEdgesCutCorner_bottomLeftSize="8dp"
                app:shape_dottedEdgesCutCorner_bottomRightSize="8dp">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <Button
                android:text="Submit Edit"
                android:id="@+id/teachedtbtn"
                android:layout_margin="15dp"
                android:background="@color/red"
                android:textColor="@color/white1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>
                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.DottedEdgesCutCornerView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>